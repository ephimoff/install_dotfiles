// Place your settings in this file to overwrite the default settings
{
    // Adding Fira Code font
    "editor.fontFamily": "Fira Code",
    "editor.fontSize": 14,
    "editor.fontLigatures": true,

    // Markdown linter rules
    "markdownlint.config": {
        "default": true,
        "MD013": false,
        "MD014": false,
        "MD024": false,
        "MD033": false,
        "MD040": false,
        "MD007": { "indent": 4 }
    },
    // Sets how line-breaks are rendered in the markdown preview. Setting it to 'true' creates a <br> for every newline.
    "markdown.preview.breaks": true,
    // Markdown TOC
    "markdown-toc.depthFrom":2,

"workbench.commandPalette.preserveInput":true,
"git.confirmSync": false,
"window.restoreFullscreen": true,
"workbench.iconTheme": "material-icon-theme",
"material-icon-theme.showUpdateMessage": false,
"workbench.colorTheme": "Alabaster",

// Terminal
// Customizes which terminal application to run on OS X.
// "terminal.external.osxExec": "iTerm.app",
// The path of the shell that the terminal uses on OS X.
"terminal.integrated.shell.osx": "/bin/zsh",
 // Controls whether font ligatures are enabled in the terminal.
// "terminal.integrated.fontLigatures": true,
"files.associations": {
    "*.mustache": "html",
    "*.nunjucks": "html"
},
"git.enableSmartCommit": true,
"workbench.startupEditor": "newUntitledFile",
// jshint
"jshint.options": {
    // enable ecma version 6
    "esversion":6,
    "multistr": true
}
}


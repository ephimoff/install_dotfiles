#!/usr/bin/env bash
# shellcheck disable=SC1091
source ./bin/echos.sh
# Start
bot "Starting $(basename "$0")"

# create folders
[[ ! -d ~/Downloads/.transmission/incomplete ]] && mkdir -p ~/Downloads/.transmission/incomplete
[[ ! -d ~/Projects/eclipse_workspace ]] && mkdir -p ~/Projects/eclipse_workspace
[[ ! -d ~/tmp ]] && mkdir -p ~/tmp

# ssh
[[ ! -d ~/.ssh ]] && mkdir -p ~/.ssh
chmod 700 ~/.ssh

# create a symlink to the scripts folder:
ln -s ~/Projects/scripts ~/.scripts

# Finished
bot "$(basename "$0") complete."

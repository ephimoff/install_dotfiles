#!/usr/bin/env bash

source ./bin/echos.sh
# Start
bot "Starting $(basename "$0"). Note: it may take a while"

# Ask for the administrator password upfront
sudo -v

# Make sure weâ€™re using the latest Homebrew
running "Updating brew..."
brew update
ok

# Upgrade any already-installed formulae
running "Upgrading formulae..."
brew upgrade
ok

# install applications
running "Installing applications..."
brew tap homebrew/completions

brew install bash
brew install bash-completion
brew install docker-compose-completion
brew install git
brew install jq #jq is a lightweight and flexible command-line JSON processor
brew install vagrant-completion
brew install vim --with-custom-python
brew install zsh
ok

running "Cleaning up unneeded files..."
brew cleanup
ok

# Finished
bot "$(basename "$0") complete."

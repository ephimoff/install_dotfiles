#!/usr/bin/env bash

# Easier navigation: .., ..., ...., ....., ~ and -
alias ..="cd .."
alias ...="cd ../.."
alias -- -="cd -"

# Shortcuts
alias d='docker'
alias g="git"
alias h="history"
alias o="open"
alias oo="open ."
alias pro="cd ~/Projects"
alias v="vim"
alias va="vagrant"
alias vi="vim"
alias x+="chmod +x"
alias -- +x="chmod +x"
alias vs="code ."

# grep/ack
alias grep='grep -I'
alias ack='ack --no-group --color-match=on_red'

# ls
# Detect which `ls` flavor is in use
if ls --color > /dev/null 2>&1; then # GNU `ls`
	colorflag="--color"
else # OS X `ls`
	colorflag="-G"
fi

# shellcheck disable=SC2139
alias l="ls -lhF ${colorflag}" # List all files colorized in long format
# shellcheck disable=SC2139
alias ll="ls -lAhF ${colorflag}" # List all files colorized in long format, including dot files
# shellcheck disable=SC2139
alias ls="command ls -h ${colorflag}" # Always use color output for `ls`

# addional ls
alias lr='ll -R'         # Lists human readable sizes, recursively.
alias la='ll -A'         # Lists human readable sizes, hidden files.
alias lx='ll -XB'        # Lists sorted by extension (GNU only).
alias lk='ll -Sr'        # Lists sorted by size, largest last.
alias lt='ll -tr'        # Lists sorted by date, most recent last.
alias lc='lt -c'         # Lists sorted by date, most recent last, shows change time.
alias lu='lt -u'         # Lists sorted by date, most recent last, shows access time.

# Get macOS Software Updates, and update installed Ruby gems, Homebrew and their installed packages
alias update='brew update; brew upgrade; brew cleanup; npm -g update'


# orion
alias rdep="rgrav deploy -R unison_frontend:0 -R unison_backend:0 -R unison_haproxy:0 -R connect:0 -p ec2"
alias rinv="rgrav invoke -p ec2"


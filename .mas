#!/usr/bin/env bash

# Start
echo "$(basename "$0") starting."

# Ask for the administrator password upfront
sudo -v

# install mas first
brew install mas

# install applications

APPS=(
  425424353 # The Unarchiver
  443987910 # 1Password
  823766827 # OneDrive
  408981434 # iMovie
  409201541 # Pages
  775737590 # iA Writer
)
mas install "${APPS[@]}"

# cleanup unneeded files
brew cleanup

# Finished
echo "$(basename "$0") complete."

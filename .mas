#!/usr/bin/env bash
# shellcheck disable=SC1091
source ./bin/echos.sh
# Start
bot "Starting $(basename "$0")"

# Ask for the administrator password upfront
sudo -v

# install mas first
running "Installing mas"
brew install mas
ok
# install applications

APPS=(
  425424353 # The Unarchiver
  443987910 # 1Password
  823766827 # OneDrive
  409201541 # Pages
  775737590 # iA Writer
  407963104 # Pixelmator
  585829637 # Todoist
)
running "Installing mas apps"
mas install "${APPS[@]}"
ok

# cleanup unneeded files
brew cleanup

# Finished
bot "$(basename "$0") complete."

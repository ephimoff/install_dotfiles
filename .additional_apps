#!/usr/bin/env bash
# shellcheck disable=SC1090
source "${HOME}/Projects/dotfiles/bin/echos.sh"

# Start
bot "Starting $(basename "$0")"

# homebrew options
export HOMEBREW_CASK_OPTS=""

# Ask for the administrator password upfront
sudo -v

# setup taps
running "Setting up taps... "
brew tap caskroom/fonts
brew tap caskroom/cask
ok


# Install Caskroom
running "Installing caskroom... "
brew tap caskroom/versions
ok

# Install packages
# You can comment out the apps that you don't want to install
running "Installing apps..."
brew cask install caffeine       # http://lightheadsw.com/caffeine/
brew cask install flycut         # https://github.com/TermiT/Flycut/
brew cask install grammarly      # https://www.grammarly.com
brew cask install notion         # https://www.notion.so
brew cask install numi           # http://numi.io
brew cask install punto-switcher # https://yandex.ru/soft/punto/
brew cask install spectacle      # https://www.spectacleapp.com
brew cask install spotify        # https://www.spotify.com/
ok

running "Cleaning up unneeded files..."
brew cleanup
ok

# Finished
bot "$(basename "$0") complete."

#!/usr/bin/env bash

###############################################################################
# Visual Studio Code
###############################################################################
# shellcheck disable=SC1090
source "${HOME}/Projects/dotfiles/bin/echos.sh"

running "Terminal: Open Light theme"
open "${HOME}/Projects/dotfiles/applications/terminal/Light_theme.terminal"
ok

running "Terminal: Make Light theme the default one"
defaults write com.apple.terminal 'Default Window Settings' -string Light_theme
defaults write com.apple.terminal 'Startup Window Settings' -string Light_theme
ok
#!/usr/bin/env bash

###############################################################################
# macOS keybindings
###############################################################################

keybindingSource=$HOME/Projects/dotfiles/applications/keybinding/DefaultKeyBinding.dict

keybindingTarget=$HOME/Library/KeyBindings


echo "macOS keybindings: Linking config file"
if [[ -f "$keybindingSource" ]] ; then
    echo "macOS keybindings: Create folder if doesn't exist"
    [[ ! -d keybindingTarget ]] && mkdir keybindingTarget
    
    echo "macOS keybindings: Removing the old file if it existed
    "
    [[ -f "$keybindingTarget/DefaultKeyBinding.dict" ]] && rm -rf "$keybindingTarget/DefaultKeyBinding.dict"

    ln -s "$keybindingSource" "$keybindingTarget/DefaultKeyBinding.dict"
fi
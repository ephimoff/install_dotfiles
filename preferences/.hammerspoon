#!/usr/bin/env bash

###############################################################################
# Hammerspoon.app
###############################################################################
# shellcheck disable=SC1090
source "${HOME}/Projects/dotfiles/bin/echos.sh"

hammerspoonSource=$HOME/Projects/dotfiles-min/applications/hammerspoon/.hammerspoon/

hammerspoonTarget=$HOME/.hammerspoon    

running "Hammerspoon: Linking config file and Spoons plugins"
if [[ -f "$hammerspoonSource" ]] ; then
    running "Hammerspoon: Remove shortcuts files if already exists"
    [[ -f "$hammerspoonTarget" ]] && rm -rf "$hammerspoonTarget"
    ok
    ln -s "$hammerspoonSource" "$hammerspoonTarget"
fi
ok